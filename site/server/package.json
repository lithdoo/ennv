{
  "name": "@ennv/server",
  "version": "1.0.0",
  "description": "ennv server",
  "main": "build/main/index.js",
  "types": "build/main/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/lithdoo/server",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "start:dev": "tsc -p tsconfig.json && pm2 start ./build/index.js --watch --name ennv-dev -e ./error -o ./console &&  tsc -p tsconfig.json -w ",
    "stop:dev": "pm2 stop ennv-dev && pm2 delete ennv-dev",
    "run": "node ./build/index.js",
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "test": "run-p build:* && run-p test:*",
    "test:unit": "ava",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@ennv/disk": "workspace:^",
    "@ennv/systray": "workspace:*",
    "crypto-js": "^4.1.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-router": "^12.0.0",
    "path-to-regexp": "^6.2.1"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/crypto-js": "^4.1.1",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "@types/node": "^20.2.6",
    "ava": "^5.3.1",
    "npm-run-all": "^4.0.2",
    "supertest": "^6.3.3",
    "typedoc": "^0.19.0",
    "typescript": "^5.1.6"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "files": [
      "!build/module/**"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    }
  }
}
